@model IEnumerable<CarRental.Models.Location>

@{
    ViewData["Title"] = "Index";
}

<h1>Localizations</h1>

<p>
    <a class="details-buttonCreate btn" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                    <a asp-action="Edit" class="details-button w-20 btn" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" class="details-button w-20 btn" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" class="w-20 btn-danger btn" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
