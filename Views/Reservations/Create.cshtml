@model CarRental.Models.Reservation

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <input type="hidden" name="carId" value="@ViewBag.CarId" />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group md-3 mb-3">
                <label asp-for="PickupLocationId" class="control-label"></label>
                <select asp-for="PickupLocationId" class ="form-control" asp-items="ViewBag.PickupLocation"></select>
            </div>
            <div class="form-group md-3 mb-3">
                <label asp-for="ReturnLocationId" class="control-label"></label>
                <select asp-for="ReturnLocationId" class ="form-control" asp-items="ViewBag.ReturnLocation"></select>
            </div>
            <div class="form-group md-3 mb-3">
                <label asp-for="PickupDate" class="control-label"></label><br />
                <input type="date" id="pickupDate" name="trip-start"> 
                <span asp-validation-for="PickupDate" class="text-danger"></span>
            </div>
            <div class="form-group md-3 mb-3">
                <label asp-for="ReturnDate" class="control-label"></label><br />
                <input type="date" id="returnDate" name="trip-end">
                <span asp-validation-for="ReturnDate" class="text-danger"></span>
            </div>
        </form>
        <div class="form-group">
            <h1>@ViewBag.CarName, @ViewBag.CarYear</h1>
            <h2>@ViewBag.DailyRate$</h2>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Cars">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
